<resources>
    <declare-styleable name="view_MyTextView">
        <attr name="view_myText" format="string" />
        <attr name="view_myTextColor" format="color" />
        <attr name="view_myTextSize" format="dimension" />
        <attr name="view_MaxLength" format="integer" />

        <attr name="view_InputType" format="enum">
            <enum name="number" value="1" />
            <enum name="text" value="2" />
            <enum name="password" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="view_QQstepView">
        <attr name="view_outerColor" format="color" />
        <attr name="view_innerColor" format="color" />
        <attr name="view_borderWidth" format="dimension" />
        <attr name="view_stepTextSize" format="dimension" />
        <attr name="view_stepTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="view_ColorTrackTextView">
        <attr name="view_originColor" format="color" />
        <attr name="view_changeColor" format="color" />
    </declare-styleable>


    <declare-styleable name="view_RatingBar">
        <attr name="view_starNormal" format="reference" />
        <attr name="view_starFocus" format="reference" />
        <attr name="view_gradeNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_LetterSideBar">
        <attr name="view_textSize" format="dimension" />
        <attr name="view_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="view_SlidingMenu">
        <attr name="view_rightSlideMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="view_QQSlidingMenu">
        <attr name="view_rightQQSlideMargin" format="dimension" />
    </declare-styleable>


    <declare-styleable name="view_StatesLayout">
        <attr name="view_loadingImageSrc" format="reference" />
        <attr name="view_failImageSrc" format="reference" />
        <attr name="view_failText" format="reference" />
        <attr name="view_failButtonText" format="reference" />
        <attr name="view_errorImageSrc" format="reference" />
        <attr name="view_errorText" format="reference" />
        <attr name="view_errorButtonText" format="reference" />
    </declare-styleable>
</resources>
